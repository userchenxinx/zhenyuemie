<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pinming.mapper.UserMapper">

    <select id="login" parameterType="user" resultType="integer">
        SELECT count(1) FROM user where email = #{email} and password = #{password}
    </select>

    <select id="findUserByEmail" parameterType="string" resultType="com.pinming.pojo.User">
        select * from user where email = #{email}
    </select>

    <insert id="addUser" parameterType="user">
        insert into user(id,email,password,createtime) values(null,#{email},#{password},#{createtime})
    </insert>
</mapper>